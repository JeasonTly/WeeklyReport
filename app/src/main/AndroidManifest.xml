<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aorise.weeklyreport">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WRApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.WeekWorkTimeActivity"></activity>
        <activity android:name=".activity.WorkTimeYearStatisticsActivity"></activity>
        <activity
            android:name=".activity.ProjectStatisticsActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".activity.SettingsNextWeekPlanActivity" /> <!-- 项目选择 项目组成员选择 界面 -->
        <activity android:name=".activity.ChooseProjectActivity" /> <!-- 项目概况 界面 -->
        <activity
            android:name=".activity.ProjectInfoActivity"
            android:screenOrientation="portrait" /> <!-- 项目周报添加与查看界面 -->
        <activity android:name=".activity.ReviewAndToFillReportActivity" /> <!-- 项目周报整体情况填写界面 -->
        <activity android:name=".activity.OverAllSituationActivity" /> <!-- 项目周报查看界面 -->
        <activity android:name=".activity.ProjectReportManagerActivity" /> <!-- 项目周报详情界面 -->
        <activity android:name=".activity.WeeklyReportDetailActivity" /> <!-- 项目组成员 周报查看界面 -->
        <activity android:name=".activity.AuditWeeklyReportActivity" /> <!-- 新增或者编辑周报界面 -->
        <activity android:name=".activity.FillReportActivity" /> <!-- 登录界面 -->
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>