<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="stagecontent"
            type="com.aorise.weeklyreport.bean.HeaderItemBean.PlanDetailsListBean"></variable>
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/base_line_cf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="工作事项" />

        <TextView
            android:text="@{stagecontent.specificPhase}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/stage_content_icon_right"
            android:textSize="18sp"
            android:layout_marginRight="5dp"
            android:textColor="#C5C5C5"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/stage_content_icon_right"
            android:layout_centerVertical="true"
            android:src="@drawable/you"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</layout>